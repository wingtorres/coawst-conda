#export USE_NETCDF4=
#export NETCDF_INCDIR=${CONDA_PREFIX}/include
#export NETCDF_LIBDIR=${CONDA_PREFIX}/lib

#MCT
export MCT_PATH=${HOME}/COAWST/Lib/MCT
