#!/bin/bash

#Compilers
export CC=${CONDA_PREFIX}/bin/mpicc
export FC=${CONDA_PREFIX}/bin/mpif90

#MPI
export USE_MPI=ON
export USE_MPIF90=ON

#NETCDF
export USE_NETCDF4=ON
unset NETCDF_INCDIR
